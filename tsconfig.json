{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"declaration": true,
		"paths": {
			"@gluestack/framework": ["node_modules/@gluestack/framework"],
      "@gluestack/glue-plugin-backend-engine/sdk": ["dist/sdk/*"]
		},
		"lib": ["dom", "es6"],
		"target": "es5"
	},
	"include": [
		"src/**/*.ts",
		"sdk/**/*.ts",
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
